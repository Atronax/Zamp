QListView
{
	font-family: "Augusta two";
	font-weight: bold;
	font-size: 20px;
	
	background: #000000;
	border: 4px solid black;		
}

QListView:hover
{
	font-size: 30px;
}

QListView::item
{	
	padding: 0px;
	margin: 15px 20px 15px 20px;	

	color: #FFFFFF;	
	border: 4px solid black	
}

QListView::item:hover
{	
	margin-left: 30px;
}

QListView::item:selected
{	
	margin-left: 40px;
}