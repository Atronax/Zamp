PlaylistView
{
    font-family: "Augusta two";
    font-weight: bold;
    font-size: 20px;
	
    background: #000000;
    border: 4px solid black;		
}

PlaylistView:hover
{
    font-size: 30px;
}

PlaylistView::item
{	
    padding: 0px;
    margin: 15px 20px 15px 20px;	

    color: #8B0000;	
    border: 4px solid black	
}

PlaylistView::item:hover
{	
    margin-left: 30px;
}

PlaylistView::item:selected
{	
    margin-left: 50px;
}